<div class = 'new_post'>
<h2>Create New Post</h2>
<div class = "back_to_posts">
<%= link_to 'Back to Posts', posts_path %>
<%= form_with model: @post do |form| %>
</div>
<div class = "add_new_post">

<%= form.label :title %>
<div class = "new_post_title">
  <%= form.text_field :title %>
  <% @post.errors.full_messages_for(:title).each do |message| %>
  <%= message %>
  <% end %>
  </div>
  <div class = "new_post_text">
  <%= form.label :text %>
   <%= form.text_area :text %>
  <%@post.errors.full_messages_for(:text).each do |message|%>
  <%=message%>
  <% end %>
  </div>
  <div class = "btn_new_post">
  <%= form.submit class: 'btn_create_post' %>
<% end %>
</div>
</div>
</div>